<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/info_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wersja"
            android:layout_weight="1.2"
            android:gravity="center"
            android:textColor="#FF60"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/orange_gradient">
        </View>
        <TextView
            android:id="@+id/info_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#F000"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/orange_gradient">
        </View>
        <TextView
            android:id="@+id/info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Typ informacji"
            android:layout_weight="0.7"
            android:gravity="center"
            android:textColor="#F000"
            android:paddingBottom="5dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/orange_line"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp" />
    <TextView
        android:id="@+id/info_content"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F000"
        android:gravity="start"
        android:text="bardzo długi tekst na temat wielu zmian jakie zostały dokonane podczas ostatniego updejtu aplikacji oraz podziękowania dla wielu zacnych osób" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/orange_line"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp" />
</LinearLayout>