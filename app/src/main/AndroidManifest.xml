<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ziku.hotshot">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/hot_shot_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="hot_Shot_active.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.example.ziku.hotshot.tables.ActiveWebSites, com.example.ziku.hotshot.tables.ActiveHotShots, com.example.ziku.hotshot.tables.ActiveCategories" />

        <activity
            android:name=".MainActivity"
            android:icon="@drawable/hotshot_button_white"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".management.ShowImageActivity" />

        <service
            android:name=".services.HotShotService"
            android:enabled="true"
            android:exported="false"
            android:label="@string/serviceName" />

        <receiver android:name=".services.HotShotAlarmReceiver" />

        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>